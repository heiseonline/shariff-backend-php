{
    "name": "heise/shariff",
    "description": "PHP backend for Shariff. Shariff enables website users to share their favorite content without compromising their privacy.",
    "keywords": [
        "heise",
        "social buttons",
        "shariff"
    ],
    "homepage": "https://github.com/heiseonline/shariff-backend-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Busse",
            "email": "pmb@heise.de"
        }
    ],
    "require": {
        "php": "^7.0",
        "psr/log": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-factory-implementation": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-message-implementation": "^1.0",
        "zendframework/zend-cache": "^2.7"
    },
    "require-dev": {
        "nyholm/psr7": "^1.0",
        "php-http/guzzle6-adapter": "^2.0",
        "phpunit/phpunit": "^7.0"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Heise\\Shariff\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heise\\Tests\\Shariff\\": "tests"
        }
    }
}
