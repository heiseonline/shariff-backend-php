{
    "name": "heise/shariff",
    "description": "PHP backend for Shariff. Shariff enables website users to share their favorite content without compromising their privacy.",
    "keywords": [
        "heise",
        "social buttons",
        "shariff"
    ],
    "homepage": "https://github.com/heiseonline/shariff-backend-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Busse",
            "email": "pmb@heise.de"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "guzzlehttp/guzzle": "^6.1",
        "psr/log": "^1.0",
        "zendframework/zend-cache": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "5.6.0"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Heise\\Shariff\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heise\\Tests\\Shariff\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/heiseonline/shariff-backend-php.git"
        }
    ]
}
