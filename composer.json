{
    "name": "heise/shariff",
    "keywords": [
        "heise",
        "social buttons",
        "shariff"
    ],
    "description": "PHP backend for Shariff. Shariff enables website users to share their favorite content without compromising their privacy.",
    "homepage": "https://github.com/heiseonline/shariff-backend-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Busse",
            "email": "pmb@heise.de"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0 <8.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.4.1",
        "laminas/laminas-cache": "^3.1",
        "laminas/laminas-cache-storage-adapter-filesystem": "^2.0",
        "laminas/laminas-cache-storage-adapter-memory": "^2.0",
        "laminas/laminas-cache-storage-deprecated-factory": "^1.0",
        "psr/log": "^1 | ^2 | ^3"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.19",
        "friendsofphp/php-cs-fixer": "^3.47",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Heise\\Shariff\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heise\\Tests\\Shariff\\": "tests"
        }
    },
    "scripts": {
        "cs-fixer-dry": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "cs-fixer-fix": "vendor/bin/php-cs-fixer fix --diff",
        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text -v",
        "phpmd": "vendor/bin/phpmd . gitlab phpmd.xml",
        "phpstan": "vendor/bin/phpstan analyse --no-progress --error-format gitlab src index.php",
        "lint": "bash lint.sh"
    }
}
