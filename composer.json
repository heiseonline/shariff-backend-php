{
    "name": "heise/shariff",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/heiseonline/shariff-backend-php.git"
        }
    ],
    "keywords": ["heise", "social buttons", "shariff"],
    "description": "PHP backend for Shariff. Shariff enables website users to share their favorite content without compromising their privacy.",
    "homepage": "https://github.com/heiseonline/shariff-backend-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Busse",
            "email": "pmb@heise.de"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "psr/log": "^1.0",
        "zendframework/zend-cache": "^2.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.11",
        "guzzlehttp/guzzle": "^6.1",
        "phpunit/phpunit": "^5.3",
        "php-http/mock-client": "^0.3"
    },
    "suggest": {
        "guzzlehttp/guzzle": "For native Guzzle implementation",
        "php-http/buzz-adapter": "Buzz HTTPlug client implementation",
        "php-http/guzzle6-adapter": "Guzzle HTTPlug client implementation"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Heise\\Shariff\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Heise\\Tests\\Shariff\\": "tests" }
    }
}
