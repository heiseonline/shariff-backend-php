{
    "commit-msg": {
        "enabled": false,
        "actions": []
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text -v"
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting"
            },
            {
                "action": "vendor/bin/php-cs-fixer fix --verbose --dry-run --diff"
            },
            {
                "action": "vendor/bin/phpmd . gitlab phpmd.xml"
            },
            {
                "action": "vendor/bin/phpstan analyse --no-progress --error-format gitlab src index.php"
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": false,
        "actions": []
    }
}
